@model Sigedap.Models.EquipoDañado

<form name="addequipo">
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label">Tipo de Equipo</label>
                @Html.DropDownList("TipoDeEquipoId", null, null, new { @data_ng_model = "newequipo.TipoDeEquipoId", @class = "form-control" })

            </div>
            <div class="form-group">
                <label class="control-label">Marca</label>
                @Html.DropDownList("MarcaId", null, null, new {@data_ng_model = "newequipo.MarcaId", @class = "form-control"})

            </div>
            <div class="form-group">
                <label class="control-label">Modelo</label>
                <input type="text" data-ng-model="newequipo.Modelo" class="form-control"/>

            </div>
            <div class="form-group">
                <label class="control-label">Serie</label>
                <input type="text" data-ng-model="newequipo.Serie" class="form-control"/>

            </div>
            <div class="form-group">
                <label class="control-label">Nacionalidad</label>
                <input type="text" data-ng-model="newequipo.Nacionalidad" class="form-control"/>

            </div>
            <div class="form-group">
                <label class="control-label">Descripción</label>
                <input type="text" data-ng-model="newequipo.Descripcion" class="form-control"/>
            </div>
        </div>

        <div class="modal-footer">
            <input type="submit" value="Add" data-ng-click="add()" data-ng-disabled="!addequipo.$valid" class="btn btn-info" />
            <input type="button" value="Cancel" data-dismiss="modal" class="btn btn-primary" />
        </div>
    </div>
    <hr />
</form>