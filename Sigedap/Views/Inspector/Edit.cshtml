@model Sigedap.Models.Inspector

@{
    ViewBag.Title = "Edit";
}


<div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2  class="text-center"><strong>Nuevo Inspector</strong></h2>
                    <div class="line">
                        <hr>
                    </div>
                    <div class="clearfix"></div>
                </div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="row">        
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="col-md-6">
            @Html.LabelFor(model => model.Nombres, new { @class = "control-label col-md-6" })
            <div class="form-group">
                @Html.EditorFor(model => model.Nombres)
                @Html.ValidationMessageFor(model => model.Nombres)
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Apellidos, new { @class = "control-label col-md-6" })
            <div class="form-group">
                @Html.EditorFor(model => model.Apellidos)
                @Html.ValidationMessageFor(model => model.Apellidos)
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Activo, new { @class = "control-label col-md-6" })
            <div class="form-group">
                @Html.EditorFor(model => model.Activo)
                @Html.ValidationMessageFor(model => model.Activo)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-10 col-md-2">
			    @Html.ActionLink("Cerrar", "Index",null,new {@class = "btn btn-default"})
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
	<hr/>
}
		</div>
     </div>    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
