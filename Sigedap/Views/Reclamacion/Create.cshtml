                        @Html.ValidationSummary(true)
                        <div class="hidden fadeOut col-md-12" id="cargar" align="center">
                        </div>
                        <div class="col-md-6">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.DictamenDeReclamacion.Ueb):</strong></p>
