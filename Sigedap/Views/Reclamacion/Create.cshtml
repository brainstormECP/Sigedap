                                <label class="form-control disabled">@ConfiguracionData.OficinaComercial</label>
                            </div>
                        </div>
                        <h4 class="text-center"><strong>Datos del Cliente.</strong></h4>
                        <div class="line">
                            <hr>
                        </div>
                        <div class="col-md-3">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.Ci):</strong>
                            </p>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Cliente.Ci, null, new {@class = "form-control", @data_ng_model = "ci"})
                                @Html.ValidationMessageFor(model => model.Cliente.Ci)
                            </div>
                        </div>
                        @* todo: hacer con nombre lo mismo del carne *@
                        <div class="col-md-3">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.Nombres):</strong></p>
