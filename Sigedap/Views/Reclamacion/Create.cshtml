                                @Html.ValidationMessageFor(model => model.Cliente.Folio)
                            </div>
                        </div>

                        <div class="col-md-12">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.DictamenDeReclamacion.NombreReclamante):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.DictamenDeReclamacion.NombreReclamante)
                                @Html.ValidationMessageFor(model => model.DictamenDeReclamacion.NombreReclamante)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.DictamenDeReclamacion.CiReclamante):</strong></p>
                            <div class="form-group">
                                <input id="DictamenDeReclamacion.CiReclamante" name="DictamenDeReclamacion.CiReclamante" class="form-control" value="{{ ci }}" />
                                @Html.ValidationMessageFor(model => model.DictamenDeReclamacion.CiReclamante)
                            </div>
                        </div>
                        <div class="col-md-3 col-md-offset-2">
                            <div class="form-group">
                                <p align="left">
                                    <strong>@Html.DisplayNameFor(model => model.DictamenDeReclamacion.Procede):</strong>
                                    @Html.EditorFor(model => model.DictamenDeReclamacion.Procede)
                                    @Html.ValidationMessageFor(model => model.DictamenDeReclamacion.Procede)
                                </p>
                            </div>
                        </div>
                    </div>

                    <p align="left">
                        <strong>@Html.DisplayNameFor(model => model.DictamenDeReclamacion.Observaciones)</strong>
                    </p>
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.DictamenDeReclamacion.Observaciones, new { @class = "form-control xtext", @cols = "30", @rows = "3", spellcheck = false })
                        @Html.ValidationMessageFor(model => model.DictamenDeReclamacion.Observaciones)
                    </div>
                    <div class="col-md-2 col-md-offset-10 x">
                        <button type="submit" id="insertar" class="btn tf-btn btn-success text-right">Agregar</button>
                    </div>

                }

            </div>
        </div>
        <hr />
    </div>
    <div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}