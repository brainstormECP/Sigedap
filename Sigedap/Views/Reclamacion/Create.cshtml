                        <div class="col-md-12">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.Calle):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Cliente.Calle)
                                @Html.ValidationMessageFor(model => model.Cliente.Calle)
                            </div>
                        </div>
                        <div class="col-md-2">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.No):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Cliente.No)
                                @Html.ValidationMessageFor(model => model.Cliente.No)
                            </div>
                        </div>
                        <div class="col-md-1">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.Piso):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Cliente.Piso)
                                @Html.ValidationMessageFor(model => model.Cliente.Piso)
                            </div>
                        </div>
                        <div class="col-md-2">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.Apto):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Cliente.Apto)
                                @Html.ValidationMessageFor(model => model.Cliente.Apto)
                            </div>
                        </div>
                        <div class="col-md-7">
                            <p align="left">
                                <strong>entre:</strong>
                            </p>
                            <div class="col-md-5">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Cliente.EntreCalle1)
                                    @Html.ValidationMessageFor(model => model.Cliente.EntreCalle1)
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <p align="left">
                                        <strong>y</strong>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Cliente.EntreCalle2)
                                    @Html.ValidationMessageFor(model => model.Cliente.EntreCalle2)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.Rpto):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Cliente.Rpto)
