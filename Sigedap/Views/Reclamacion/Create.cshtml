                                @Html.EditorFor(model => model.Cliente.Nombres)
                                @Html.ValidationMessageFor(model => model.Cliente.Nombres)
                            </div>
                        </div>
                        <div class="col-md-3">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.PrimerApellido):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Cliente.PrimerApellido)
                                @Html.ValidationMessageFor(model => model.Cliente.PrimerApellido)
                            </div>
                        </div>
                        <div class="col-md-3">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.SegundoApellido):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Cliente.SegundoApellido)
                                @Html.ValidationMessageFor(model => model.Cliente.SegundoApellido)
