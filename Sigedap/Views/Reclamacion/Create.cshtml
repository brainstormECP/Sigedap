                                @Html.EditorFor(model => model.Cliente.Municipio)
                                @Html.ValidationMessageFor(model => model.Cliente.Municipio)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.TelefonoParticular):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Cliente.TelefonoParticular)
                                @Html.ValidationMessageFor(model => model.Cliente.TelefonoParticular)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p align="left"><strong>@Html.DisplayNameFor(model => model.Cliente.TelefonoTrabajo):</strong></p>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Cliente.TelefonoTrabajo)
                                @Html.ValidationMessageFor(model => model.Cliente.TelefonoTrabajo)
                            </div>
