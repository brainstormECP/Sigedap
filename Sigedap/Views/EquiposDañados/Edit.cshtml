        <div class="form-group">
            <div class="col-md-offset-10 col-md-2">
			    @Html.ActionLink("Cerrar", "Index",null,new {@class = "btn btn-default"})
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    </div>
	<hr/>
