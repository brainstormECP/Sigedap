@model Sigedap.Models.EquipoDañado

@{
    ViewBag.Title = "Edit";
}


<div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2  class="text-center"><strong>Nuevo EquipoDañado</strong></h2>
                    <div class="line">
                        <hr>
                    </div>
                    <div class="clearfix"></div>
                </div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="row">        
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="col-md-6">
            @Html.LabelFor(model => model.Nacionalidad, new { @class = "control-label col-md-6" })
            <div class="form-group">
                @Html.EditorFor(model => model.Nacionalidad)
                @Html.ValidationMessageFor(model => model.Nacionalidad)
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Serie, new { @class = "control-label col-md-6" })
            <div class="form-group">
                @Html.EditorFor(model => model.Serie)
                @Html.ValidationMessageFor(model => model.Serie)
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Modelo, new { @class = "control-label col-md-6" })
            <div class="form-group">
                @Html.EditorFor(model => model.Modelo)
                @Html.ValidationMessageFor(model => model.Modelo)
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-6" })
