@model Sigedap.Models.ActaEntregaEquiposReposicion

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="section-title">
                <h2 class="text-center"><strong>Eliminar Acta de Entrega de Equipos por Reposición</strong></h2>
                <div class="line">
                    <hr>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="col-md-12">
                <h3>¿Esta seguro que desea eliminar este Acta de Entrega de Equipos por Reposiciónn?</h3>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Fecha)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Expediente)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Expediente.Numero)
                    </dd>

                </dl>
                <div class="col-md-12">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-3">
                            @Html.ActionLink("Cerrar", "Index", new{id= Model.ExpedienteDictamenDeReclamacionId}, new { @class = "btn btn-default" })
